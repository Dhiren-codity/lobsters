<p>
Domain <%= link_to @domain.domain, @domain %> has <%= "#{@origins.count} origin".pluralize(@origins.count) %>
</p>

<ul>
  <% @origins.each do |origin| %>
    <li>
      <%= link_to origin.identifier, origin %> <%= "#{origin.stories_count} story".pluralize(origin.stories_count) %>
      <% if origin.banned? %>
        banned
      <% end %>
    </li>
  <% end %>
</ul>
